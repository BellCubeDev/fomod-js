{
  "type": "module",
  "name": "fomod",
  "description": "A library for creating, parsing, editing, and validating XML-based Fomod installers, widely popularized in the Bethesda modding scene",
  "version": "0.1.10",
  "main": "dist/index.js",
  "repository": "https://github.com/BellCubeDev/fomod-js/",
  "bugs": {
    "url": "https://github.com/BellCubeDev/fomod-js/issues/new/"
  },
  "scripts": {
    "build": "tsc",
    "test": "npx jest",
    "type-check": "tsc --noEmit"
  },
  "files": [
    "dist",
    "readme.md",
    "license",
    "src"
  ],
  "nodemonConfig": {
    "watch": [
      "src",
      "tsconfig.json"
    ],
    "ext": "ts,js,json",
    "delay": 1000,
    "exec": "ts-node --project ./tsconfig.json --esm"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "eslint": "^8.44.0",
    "eslint-plugin-github": "^4.8.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-extended": "^4.0.2",
    "jsdom": "latest",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "fomod",
    "xml",
    "installer",
    "mod",
    "modding",
    "bethesda",
    "fallout mod",
    "mod installer",
    "fomod installer",
    "fomod xml"
  ]
}
